{
    "name": "numbered-bookmarks",
    "displayName": "Numbered Bookmarks",
    "description": "Mark lines and jump to them, in Delphi style",
    "version": "7.2.0",
    "publisher": "alefragnani",
    "engines": {
        "vscode": "^1.45.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "bookmark",
        "sticky",
        "jump",
        "mark",
        "navigation",
        "Delphi",
        "multi-root ready"
    ],
    "icon": "images/icon.png",
    "license": "SEE LICENSE IN LICENSE.md",
    "homepage": "https://github.com/alefragnani/vscode-numbered-bookmarks/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/alefragnani/vscode-numbered-bookmarks.git"
    },
    "bugs": {
        "url": "https://github.com/alefragnani/vscode-numbered-bookmarks/issues"
    },
    "activationEvents": [
        "*"
    ],
    "main": "./dist/extension",
    "contributes": {
        "commands": [
            {
                "command": "numberedBookmarks.toggleBookmark0",
                "title": "Numbered Bookmarks: Toggle Bookmark 0"
            },
            {
                "command": "numberedBookmarks.toggleBookmark1",
                "title": "Numbered Bookmarks: Toggle Bookmark 1"
            },
            {
                "command": "numberedBookmarks.toggleBookmark2",
                "title": "Numbered Bookmarks: Toggle Bookmark 2"
            },
            {
                "command": "numberedBookmarks.toggleBookmark3",
                "title": "Numbered Bookmarks: Toggle Bookmark 3"
            },
            {
                "command": "numberedBookmarks.toggleBookmark4",
                "title": "Numbered Bookmarks: Toggle Bookmark 4"
            },
            {
                "command": "numberedBookmarks.toggleBookmark5",
                "title": "Numbered Bookmarks: Toggle Bookmark 5"
            },
            {
                "command": "numberedBookmarks.toggleBookmark6",
                "title": "Numbered Bookmarks: Toggle Bookmark 6"
            },
            {
                "command": "numberedBookmarks.toggleBookmark7",
                "title": "Numbered Bookmarks: Toggle Bookmark 7"
            },
            {
                "command": "numberedBookmarks.toggleBookmark8",
                "title": "Numbered Bookmarks: Toggle Bookmark 8"
            },
            {
                "command": "numberedBookmarks.toggleBookmark9",
                "title": "Numbered Bookmarks: Toggle Bookmark 9"
            },
            {
                "command": "numberedBookmarks.jumpToBookmark0",
                "title": "Numbered Bookmarks: Jump to Bookmark 0"
            },
            {
                "command": "numberedBookmarks.jumpToBookmark1",
                "title": "Numbered Bookmarks: Jump to Bookmark 1"
            },
            {
                "command": "numberedBookmarks.jumpToBookmark2",
                "title": "Numbered Bookmarks: Jump to Bookmark 2"
            },
            {
                "command": "numberedBookmarks.jumpToBookmark3",
                "title": "Numbered Bookmarks: Jump to Bookmark 3"
            },
            {
                "command": "numberedBookmarks.jumpToBookmark4",
                "title": "Numbered Bookmarks: Jump to Bookmark 4"
            },
            {
                "command": "numberedBookmarks.jumpToBookmark5",
                "title": "Numbered Bookmarks: Jump to Bookmark 5"
            },
            {
                "command": "numberedBookmarks.jumpToBookmark6",
                "title": "Numbered Bookmarks: Jump to Bookmark 6"
            },
            {
                "command": "numberedBookmarks.jumpToBookmark7",
                "title": "Numbered Bookmarks: Jump to Bookmark 7"
            },
            {
                "command": "numberedBookmarks.jumpToBookmark8",
                "title": "Numbered Bookmarks: Jump to Bookmark 8"
            },
            {
                "command": "numberedBookmarks.jumpToBookmark9",
                "title": "Numbered Bookmarks: Jump to Bookmark 9"
            },
            {
                "command": "numberedBookmarks.list",
                "title": "Numbered Bookmarks: List"
            },
            {
                "command": "numberedBookmarks.listFromAllFiles",
                "title": "Numbered Bookmarks: List from All Files"
            },
            {
                "command": "numberedBookmarks.clear",
                "title": "Numbered Bookmarks: Clear"
            },
            {
                "command": "numberedBookmarks.clearFromAllFiles",
                "title": "Numbered Bookmarks: Clear from All Files"
            },
            {
                "command": "numberedBookmarks.whatsNew",
                "title": "Numbered Bookmarks: What's New"
            },
            {
                "command": "numberedBookmarks.whatsNewContextMenu",
                "title": "What's New"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Numbered Bookmarks Configuration",
            "properties": {
                "numberedBookmarks.saveBookmarksInProject": {
                    "type": "boolean",
                    "default": false,
                    "description": "Allow bookmarks to be saved (and restored) locally in the opened Project/Folder instead of VS Code"
                },
                "numberedBookmarks.showBookmarkNotDefinedWarning": {
                    "type": "boolean",
                    "default": false,
                    "description": "Controls whether to show a warning when a bookmark is not defined"
                },
                "numberedBookmarks.navigateThroughAllFiles": {
                    "type": "string",
                    "default": "false",
                    "description": "Allow navigation look for bookmarks in all files in the project, instead of only the current",
                    "enum": [
                        "false",
                        "replace",
                        "allowDuplicates"
                    ]
                },
                "numberedBookmarks.gutterIconFillColor": {
                    "type": "string",
                    "default": "#00ff25",
                    "description": "Specify the color to use on gutter icon (fill color)"
                },
                "numberedBookmarks.gutterIconNumberColor": {
                    "type": "string",
                    "default": "#000",
                    "description": "Specify the color to use on gutter icon (number color)"
                },
                "numberedBookmarks.backgroundLineColor": {
                    "type": "string",
                    "default": "",
                    "description": "Specify the background color to use on a bookmarked line",
                    "deprecationMessage": "Use `numberedBookmarks.lineBackground` in `workbench.colorCustomizations` instead"
                }
            }
        },
        "keybindings": [
            {
                "command": "numberedBookmarks.toggleBookmark1",
                "key": "ctrl+shift+1",
                "mac": "cmd+shift+1",
                "when": "editorTextFocus"
            },
            {
                "command": "numberedBookmarks.toggleBookmark2",
                "key": "ctrl+shift+2",
                "mac": "cmd+shift+2",
                "when": "editorTextFocus"
            },
            {
                "command": "numberedBookmarks.toggleBookmark3",
                "key": "ctrl+shift+3",
                "mac": "cmd+shift+3",
                "when": "editorTextFocus"
            },
            {
                "command": "numberedBookmarks.toggleBookmark4",
                "key": "ctrl+shift+4",
                "mac": "cmd+shift+4",
                "when": "editorTextFocus"
            },
            {
                "command": "numberedBookmarks.toggleBookmark5",
                "key": "ctrl+shift+5",
                "mac": "cmd+shift+5",
                "when": "editorTextFocus"
            },
            {
                "command": "numberedBookmarks.toggleBookmark6",
                "key": "ctrl+shift+6",
                "mac": "cmd+shift+6",
                "when": "editorTextFocus"
            },
            {
                "command": "numberedBookmarks.toggleBookmark7",
                "key": "ctrl+shift+7",
                "mac": "cmd+shift+7",
                "when": "editorTextFocus"
            },
            {
                "command": "numberedBookmarks.toggleBookmark8",
                "key": "ctrl+shift+8",
                "mac": "cmd+shift+8",
                "when": "editorTextFocus"
            },
            {
                "command": "numberedBookmarks.toggleBookmark9",
                "key": "ctrl+shift+9",
                "mac": "cmd+shift+9",
                "when": "editorTextFocus"
            },
            {
                "command": "numberedBookmarks.jumpToBookmark1",
                "key": "ctrl+1",
                "mac": "cmd+1",
                "when": "editorTextFocus"
            },
            {
                "command": "numberedBookmarks.jumpToBookmark2",
                "key": "ctrl+2",
                "mac": "cmd+2",
                "when": "editorTextFocus"
            },
            {
                "command": "numberedBookmarks.jumpToBookmark3",
                "key": "ctrl+3",
                "mac": "cmd+3",
                "when": "editorTextFocus"
            },
            {
                "command": "numberedBookmarks.jumpToBookmark4",
                "key": "ctrl+4",
                "mac": "cmd+4",
                "when": "editorTextFocus"
            },
            {
                "command": "numberedBookmarks.jumpToBookmark5",
                "key": "ctrl+5",
                "mac": "cmd+5",
                "when": "editorTextFocus"
            },
            {
                "command": "numberedBookmarks.jumpToBookmark6",
                "key": "ctrl+6",
                "mac": "cmd+6",
                "when": "editorTextFocus"
            },
            {
                "command": "numberedBookmarks.jumpToBookmark7",
                "key": "ctrl+7",
                "mac": "cmd+7",
                "when": "editorTextFocus"
            },
            {
                "command": "numberedBookmarks.jumpToBookmark8",
                "key": "ctrl+8",
                "mac": "cmd+8",
                "when": "editorTextFocus"
            },
            {
                "command": "numberedBookmarks.jumpToBookmark9",
                "key": "ctrl+9",
                "mac": "cmd+9",
                "when": "editorTextFocus"
            }
        ],
        "colors": [
            {
                "id": "numberedBookmarks.lineBackground",
                "description": "Background color for the bookmarked line",
                "defaults": {
                    "dark": "#00000000",
                    "light": "#00000000",
                    "highContrast": "#00000000"
                }
            },
            {
                "id": "numberedBookmarks.lineBorder",
                "description": "Background color for the border around the bookmarked line",
                "defaults": {
                    "dark": "#00000000",
                    "light": "#00000000",
                    "highContrast": "#00000000"
                }
            },
            {
                "id": "numberedBookmarks.overviewRuler",
                "description": "Overview ruler marker color for bookmarks",
                "defaults": {
                    "dark": "#12ff1288",
                    "light": "#12ff1288",
                    "highContrast": "#12ff1288"
                }
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "numberedBookmarks.whatsNewContextMenu",
                    "when": "false"
                }
            ],
            "extension/context": [
                {
                    "command": "numberedBookmarks.whatsNewContextMenu",
                    "group": "numberedBookmarks",
                    "when": "extension == alefragnani.numbered-bookmarks && extensionStatus==installed"
                }
            ]
        }
    },
    "eslintConfig": {
        "extends": [
            "vscode-ext"
        ]
    },
    "scripts": {
        "build": "webpack --mode development",
        "watch": "webpack --watch --mode development --info-verbosity verbose",
        "vscode:prepublish": "webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "compile": "tsc -p ./",
        "lint": "eslint -c package.json --ext .ts src vscode-numbered-bookmarks-core vscode-whats-new",
        "pretest": "npm run compile && npm run lint",
        "test-compile": "tsc -p ./ && npm run webpack",
        "just-test": "node ./out/src/test/runTest.js",
        "test": "npm run test-compile && npm run just-test"
    },
    "dependencies": {
        "vscode-ext-codicons": "^1.1.0",
        "vscode-ext-decoration": "1.0.0"
    },
    "devDependencies": {
        "@types/node": "^10.14.17",
        "@types/vscode": "^1.45.0",
        "@typescript-eslint/eslint-plugin": "^3.3.0",
        "@typescript-eslint/parser": "^3.3.0",
        "eslint": "^7.3.0",
        "eslint-config-vscode-ext": "^1.0.0",
        "terser-webpack-plugin": "^1.2.1",
        "ts-loader": "^4.4.2",
        "typescript": "^3.5.1",
        "webpack": "^4.19.1",
        "webpack-cli": "^3.3.11",
        "@types/mocha": "^7.0.2",
        "mocha": "^7.1.2",
        "vscode-test": "^1.3.0"
    }
}
